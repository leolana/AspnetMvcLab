@model List<MvcMusicStore.Models.Album>
@{
    ViewBag.Title = "Buscar Albuns";
}
<div class="genre">
    <h3>
        <em>@Model.First().Genero.Nome</em> Álbuns
    </h3>

    <ul id="album-list" class="list-unstyled">
        @foreach (var album in Model)
        {
            <li class="col-lg-2 col-md-2 col-sm-2 col-xs-4 container">
                <a href="@Url.Action("Details", new { id = album.Id })">
                    @if (!string.IsNullOrEmpty(album.AlbumArtUrl))
                    {
                        <img alt="@album.Titulo" src="@Url.Content(@album.AlbumArtUrl)" />
                    }
                    <h5 class="control-label">@album.Titulo</h5>
                </a>
            </li>
        }
    </ul>
</div>