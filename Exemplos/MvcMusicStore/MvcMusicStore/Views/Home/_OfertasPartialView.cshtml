@model MvcMusicStore.Models.Album

<div class="panel panel-primary">

    <div class="panel-heading">
        <h3 class="panel-title">Sua oferta do dia é: @Model.Titulo</h3>
    </div>
    <div class="panel-body">
        <p>
            <img alt="@Model.Titulo" src="@Url.Content(@Model.AlbumArtUrl)" />
        </p>

        <div id="album-details">
            <p>
                <em>Artista:</em>
                @Model.Artista.Nome
            </p>
            <p>

                <em>Preço:</em>
                @String.Format("{0:F}", Model.Preco)
            </p>
            @Html.ActionLink("Adicione ao carrinho", "Adicionar", "CarrinhoCompras", new { id = Model.Id }, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>